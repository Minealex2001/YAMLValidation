{
  "name": "yaml-validation",
  "version": "1.0.0",
  "description": "YAML Validation Desktop Application",
  "main": "electron/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:win": "cross-env CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "keywords": [
    "yaml",
    "validation",
    "electron"
  ],
  "author": "Quest Studios",
  "license": "MIT",
  "devDependencies": {
    "cross-env": "^10.1.0",
    "electron": "^28.0.0",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "js-yaml": "^4.1.0"
  },
  "build": {
    "appId": "org.queststudios.yamlvalidation",
    "productName": "YAML Validator",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/**/*",
      "src/**/*",
      "assets/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.ico",
      "sign": null,
      "verifyUpdateCodeSignature": false,
      "signingHashAlgorithms": null,
      "signDlls": false,
      "certificateFile": null,
      "certificatePassword": null
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    }
  }
}
